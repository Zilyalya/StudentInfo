<Page x:Class="StudentInfo.Visual.DobavPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentInfo.Visual"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление студента">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="2" Grid.Row="2" Text="ID Student" FontSize="25"/>
        <TextBox Margin="0 10 0 10" Grid.Column="3" Grid.Row="2" x:Name="txbIDStud"/>
        <TextBlock Grid.Column="2" Grid.Row="3" Text="Фамилия" FontSize="25"/>
        <TextBox Margin="0 10 0 10" Grid.Column="3" Grid.Row="3" x:Name="txbFam"/>
        <TextBlock Grid.Column="2" Grid.Row="4" Text="Имя" FontSize="25"/>
        <TextBox Margin="0 10 0 10" Grid.Column="3" Grid.Row="4" x:Name="txbName"/>
        <TextBlock Grid.Column="2" Grid.Row="5" Text="Отчество" FontSize="25"/>
        <TextBox Margin="0 10 0 10" Grid.Column="3" Grid.Row="5" x:Name="txbOtchestvo"/>
        <TextBlock Grid.Column="1" Grid.Row="6" Text="             Номер Группы" FontSize="25" Grid.ColumnSpan="2" />
        <TextBox Margin="0 10 0 10" Grid.Column="3" Grid.Row="6" x:Name="txbGr"/>
        <TextBlock Margin="0,6,0,10" Grid.Column="2" Grid.Row="7" Text="ДР" FontSize="25"/>
        <TextBox Grid.Column="3" Grid.Row="7" x:Name="txbDR"/>
        <TextBlock Margin="0 0 0 15" Grid.Column="2" Grid.Row="8" Text="Город" FontSize="25"/>
        <TextBlock Grid.Column="2" Grid.Row="8" Text="(Где родился)" FontSize="10"/>
        <TextBox Margin="0 10 0 10" Grid.Column="3" Grid.Row="8" x:Name="txbAdres"/>
        <Button Content="Добавить" x:Name="Dobavlenie" Click="Dobavlenie_Click" Margin="0 0 0 0" Grid.Column="5" Grid.Row="8"/>
        <Button Content="Обратно" x:Name="Nazad" Click="Nazad_Click" Margin="0 0 0 0" Grid.Column="5" Grid.Row="7"/>
        <TextBlock Text="Добавление студента" Grid.Column="2" Grid.ColumnSpan="2" FontSize="20" Margin="10"/>
    </Grid>
</Page>
